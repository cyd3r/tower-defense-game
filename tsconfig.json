{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2015",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
  },
  "include": ["src/**/*.ts", "src/**/*.js"]
}
